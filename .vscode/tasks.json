{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ file",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compiles a C++ file using g++"
    }
  ]
}
